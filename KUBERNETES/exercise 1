#             1) Create a pod called web-server with nginx:1.19.10 image



#--------------------------------------------------------pod.yaml---------------------------------------------------------------------------

apiVersion: v1
kind: Pod
metadata:
 name: web-server
spec:
 containers:
  - name: nginx-container
    image: nginx:1.19.10



#-------------------------------------------------------------------run pod.yaml------------------------------------------------------------------

kubectl create -f pod.yaml

#----------------------------------------------------------list of pods ----------------------------------------------------------------------

kubectl get pods
